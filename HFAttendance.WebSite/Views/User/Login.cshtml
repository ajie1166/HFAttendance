
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/css")
</head>
<body>
    @using (Html.BeginForm("Login","User",FormMethod.Post))
    {

        <div class="container">
            <div class="row row-center">
                <div class="col-xs-4 col-sm-offset-4 col-sm-4 col-lg-4 col-lg-offset-4 form-group">@Html.TextBox("nick", null, new { id = "nick", placeholder = "请输入账号", @class = "form-control" })</div>
            </div>
            <div class="row row-center">
                <div class="col-xs-4 col-sm-offset-4 col-sm-4 col-lg-4 col-lg-offset-4 form-group">@Html.Password("pwd", null, new { id = "pwd", placeholder = "请输入密码", @class = "form-control" })</div>
            </div>
            <div class="row row-center">
                <div class="col-xs-4 col-sm-offset-4 col-sm-4 col-lg-4 col-lg-offset-4">
                    <input type="submit" value="登录" class="btn btn-primary btn-lg btn-block" />
                </div>
            </div>
        </div>
    }
</body>
</html>
@Scripts.Render("~/js")
@Scripts.Render("~/bootstrap")
